doctype html
html
  head
    title New Book
    link(rel='stylesheet', href='stylesheets/style.css')
  nav
    ul
      li
        a(href='/') Home
      li
        a(href='/all_books') Books
      li
        a(href='/all_patrons') Patrons
      li
        a(href='/all_loans') Loans
  include ./error
  body
    h1 New Book
    form(method='post', action='/booksNew')
      p
        label(for='title') Title
        input#title(type='text', name='title')
      p
        label(for='author') Author
        input#author(type='text',name='author')
      p
        label(for='genre') Genre
        input#genre(type='text', name='genre')
      p
        label(for='first_published') First Published
        input#first_published(type='text', name='first_published')
      p
        input(type='submit', value='Create New Book')
