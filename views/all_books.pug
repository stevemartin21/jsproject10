doctype html
html
  head
    title Books
    link(rel='stylesheet', href='stylesheets/style.css')
  nav
    ul
      li
        a(href='/') Home
      li
        a(href='/all_books') Books
      li
        a(href='/all_patrons') Patrons
      li
        a(href='/all_loans') Loans
  include ./error
  body
    h1 Books
     p Total Books #{Library.length}
    p
      a.button(href='/booksNew') Create New Book
    p
      | Filters 
      a(href='/all_books') All
      |  
      a(href='/overdue') Overdue
      |  
      a(href='/checkedOUt') Checked Out
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
      tbody
        each book in Library
          tr 
            td 
              a(href='/books/'+ book.id)= book.title
            td= book.author
            td= book.genre
            td= book.first_published
         
        
    