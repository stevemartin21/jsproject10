doctype html
html
  head
    title Checked Out Loans
    link(rel='stylesheet', href='stylesheets/style.css')
  nav
    ul
      li
        a(href='/') Home
      li
        a(href='/all_books') Books
      li
        a(href='/all_patrons') Patrons
      li
        a(href='/all_loans') Loans
  include ./error
  body
    h1 Checked Out Loans
    p
      a.button(href='loansNew') Create New Loan
    p
      | Filters 
      a(href='/all_loans') All
      |  
      a(href='/overdueLoans') Overdue
      |  
      a(href='/loansCheckedOut') Checked Out
    table
      thead
        tr
          th Book
          th Patron 
          th Loaned on
          th Return by 
          th Returned on
          th Action
      tbody
        each loan in checkLoans 
          tr
            td
              a(href='/books/'+ loan.Book.id )=loan.Book.title 
            td
              a(href='/patrons/' + loan.Patron.id)=loan.Patron.first_name + ' ' + loan.Patron.last_name
            td=loan.loaned_on
            td=loan.return_by
            td=loan.returned_on
            td
              if loan.returned_on === null
                a.button(href='/return_book/'+ loan.id) Return Book