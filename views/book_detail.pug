doctype html
html
  head
    title A Brief History of Time
    link(rel='stylesheet', href='stylesheets/style.css')
  nav
    ul
      li
        a(href='/') Home
      li
        a(href='/all_books') Books
      li
        a(href='/all_patrons') Patrons
      li
        a(href='/all_loans') Loans
  include ./error
  body
    h1 Book: A Brief History of Time
    form(action="/books/"+ Details.id + "?_method=PUT" , method="post")
      p
        label(for='title') Title
        input#title(type='text', value= Details.title)
      p
        label(for='author') Author
        input#author(type='text', value= Details.author)
      p
        label(for='genre') Genre
        input#genre(type='text', value= Details.genre)
      p
        label(for='first_published') First Published
        input#first_published(type='text', value= Details.first_published )
      p
        input(type='submit', value='Update')
    h2 Loan History
    p Total Details 
    table
      thead
        tr
          th Book
          th Patron 
          th Loaned on
          th Return by 
          th Returned on
          th Action
      tbody
        each loan in info
          tr
            td
              a(href='/books/' + Details.id)=loan.Book.title
            td
              a(href='/patrons/')=loan.Patron.first_name + ' ' + loan.Patron.last_name
            td=loan.loaned_on 
            td=loan.return_by 
            td
            td
              a.button(href='/return_book/'+ Details.id) Return Book
