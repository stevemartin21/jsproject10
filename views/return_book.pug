doctype html
html
  head
    title Return Book
    link(rel='stylesheet', href='stylesheets/style.css')
  nav
    ul
      li
        a(href='/') Home
      li
        a(href='/all_books') Books
      li
        a(href='/all_patrons') Patrons
      li
        a(href='/all_loans') Loans
  include ./error
  body
    h1 Return Book
    p 
      strong Book Title: #{info.Book.title}
      |
    p 
      strong Loaned By: #{info.Patron.first_name} #{info.Patron.last_name}
      | 
    p 
      strong Loaned On: #{info.loaned_on}
      | 
    p
      strong Return By: #{info.return_by}
      | 
    form(method="post" action='/return_book/'+info.id+"?_method=PUT")
      p
        label(for='returned_on') Returned on:
        input#returned_on(type='text', value=now name='returned_on')
      p
        input(type='submit', value='Return Book')
