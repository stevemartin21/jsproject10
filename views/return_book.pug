doctype html
html
  head
    title Return Book
    link(rel='stylesheet', href='stylesheets/style.css')
  nav
    ul
      li
        a(href='/') Home
      li
        a(href='/all_books') Books
      li
        a(href='/all_patrons') Patrons
      li
        a(href='/all_loans') Loans
  include ./error
  body
    h1 Return Book
    p=info.Book.title
      strong Book Title: 
      |
    p=info.Patron.first_name + ' ' + info.Patron.last_name 
      strong Loaned By: 
      | 
    p=info.loaned_on
      strong Loaned On: 
      | 
    p=info.return_by
      strong Return By: 
      | 
    form(method="post" action='/return_book/'+info.id+"?_method=PUT")
      p
        label(for='returned_on') Returned on:
        input#returned_on(type='text', value=now name='returned_on')
      p
        input(type='submit', value='Return Book')
